# git/gitconfig

[user]
    name = Axel Andersson

[alias]
    viconfig = config --global --edit
    diffstaged = diff --staged
    diffcommit = diff origin
    difftoolstaged = difftool --staged
    difftoolcommit = difftool origin
    pullall = up-or-pull
    pushall = push --set-upstream --all
    mergenoff = merge --no-ff
    stageall = stage --all
    unstage = reset --quiet
    checkin = commit --verbose
    logshort = my-log short
    logshortcommit = my-log short origin..HEAD
    loglong = my-log long
    loglongcommit = my-log long origin..HEAD
    loggraph = my-log graph
    branch = checkout --track -b
    whichbranch = branch --list --contains
    v = config --global --edit
    d = diff
    ds = diff --staged
    dc = diff origin
    dt = difftool
    dts = difftool --staged
    dtc = difftool origin
    u = up-or-pull
    p = push --set-upstream --all
    m = merge --no-ff
    s = status
    a = stage
    aa = stage --all
    r = reset --quiet
    c = commit --verbose
    l = my-log short
    ll = my-log long
    lc = my-log short origin..HEAD
    llc = my-log long origin..HEAD
    lg = my-log graph
    b = checkout --track -b
    wb = branch --list --contains
    h = discard

[color]
    branch = always
    diff = always
    grep = always
    interactive = always
    pager = true
    showbranch = always
    status = always
    ui = always

[color "branch"]
    current = blue
    local = green
    remote = red
    plain = white

[color "decorate"]
    branch = blue
    remoteBranch = red
    tag = yellow
    HEAD = blue

[color "diff"]
    meta = white bold black
    frag = white bold black
    func = white bold black
    new = green
    old = red
    commit = cyan

[color "grep"]
    match = red bold

[color "status"]
    added = green
    changed = green
    untracked = red

[core]
    autocrlf = input
    editor = vim
    pager = less
    symlinks = true
    attributesfile = ~/.gitattributes

[credential]
    helper = dynamic

[diff]
    renames = copies
    tool = Kaleidoscope

[diff "plist"]
    textconv = plutil -convert xml1 -o -

[difftool]
    prompt = false

[difftool "Kaleidoscope"]
    cmd = ksdiff --partial-changeset --relative-path \"$MERGED\" -- \"$LOCAL\" \"$REMOTE\"

[format]
    pretty = %C(cyan)%h%Creset %C(magenta)%cd%Creset %d %s

[git-up "rebase"]
    arguments = --preserve-merges

[grep]
    patternType = perl

[log]
    date = local
    decorate = short

[merge]
    log = true
    stat = true
    tool = Kaleidoscope

[merge "plist"]
    textconv = plutil -convert xml1 -o -

[mergetool]
    prompt = false

[mergetool "Kaleidoscope"]
    cmd = ksdiff --merge --output \"$MERGED\" --base \"$BASE\" -- \"$LOCAL\" --snapshot \"$REMOTE\" --snapshot
    trustExitCode = true

[pack]
    threads = 0

[push]
    default = tracking

[status]
    short = true
