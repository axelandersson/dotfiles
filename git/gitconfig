# git/gitconfig

[user]
    name = Axel Andersson

[alias]
    viconfig = config --global --edit
    diffraw = diff --no-textconv
    diffstaged = diff --staged
    diffcommit = diff origin
    pullall = up-or-pull
    pushall = push --set-upstream --all
    mergenoff = merge --no-ff
    stageall = stage --all
    unstage = reset --quiet
    checkin = commit --verbose
    logshort = log --pretty=format:'%C(magenta)%cn%C(reset)%C(auto)%d%C(reset) %ar%n%C(cyan)%h%C(reset) %C(white bold)%s%+b%C(reset)' -10 --name-status
    loglong = log --pretty=format:'%C(magenta)%cn%C(reset)%C(auto)%d%C(reset) %ar%n%C(cyan)%h%C(reset) %C(white bold)%s%+b%C(reset)' -10 --patch
    logcommit = log --pretty=format:'%C(magenta)%cn%C(reset)%C(auto)%d%C(reset) %ar%n%C(cyan)%h%C(reset) %C(white bold)%s%+b%C(reset)' -10 --name-status origin..HEAD
    branch = checkout --track -b
    whichbranch = branch --contains
    resethard = reset --hard
    v = config --global --edit
    d = diff
    dr = diff --no-textconv
    ds = diff --staged
    dc = diff origin
    u = up-or-pull
    p = push --set-upstream --all
    m = merge --no-ff
    s = status
    a = stage
    aa = stage --all
    r = reset --quiet
    c = commit --verbose
    l = log --pretty=format:'%C(magenta)%cn%C(reset)%C(auto)%d%C(reset) %ar%n%C(cyan)%h%C(reset) %C(white bold)%s%+b%C(reset)' -10 --name-status
    ll = log --pretty=format:'%C(magenta)%cn%C(reset)%C(auto)%d%C(reset) %ar%n%C(cyan)%h%C(reset) %C(white bold)%s%+b%C(reset)' -10 --patch
    lc = log --pretty=format:'%C(magenta)%cn%C(reset)%C(auto)%d%C(reset) %ar%n%C(cyan)%h%C(reset) %C(white bold)%s%+b%C(reset)' -10 --name-status origin..HEAD
    b = checkout --track -b
    wb = branch --contains
    h = reset --hard

[color]
    branch = always
    diff = always
    grep = always
    interactive = always
    pager = true
    showbranch = always
    status = always
    ui = always

[color "branch"]
    current = blue
    local = green
    remote = red
    plain = white

[color "decorate"]
    branch = blue
    remoteBranch = red
    tag = yellow
    HEAD = blue

[color "diff"]
    meta = white bold black
    frag = white bold black
    func = white bold black
    new = green
    old = red
    commit = cyan

[color "grep"]
    match = red bold

[color "status"]
    added = green
    changed = green
    untracked = red

[core]
    autocrlf = input
    editor = vim
    pager = less -EimrX
    symlinks = true
    attributesfile = ~/.gitattributes

[credential]
    helper = dynamic

[diff]
    renames = copies

[diff "plist"]
    textconv = plutil -convert xml1 -o -

[difftool]
    prompt = false

[difftool "Kaleidoscope"]
    cmd = ksdiff --partial-changeset --relative-path \"$MERGED\" -- \"$LOCAL\" \"$REMOTE\"

[format]
    pretty = %C(cyan)%h%Creset %C(magenta)%cd%Creset %d %s

[grep]
    patternType = perl

[log]
    date = local
    decorate = short

[merge]
    log = true
    stat = true

[merge "plist"]
    textconv = plutil -convert xml1 -o -

[mergetool]
    prompt = false

[mergetool "Kaleidoscope"]
    cmd = ksdiff --merge --output \"$MERGED\" --base \"$BASE\" -- \"$LOCAL\" --snapshot \"$REMOTE\" --snapshot
    trustExitCode = true

[pack]
    threads = 0

[push]
    default = tracking

[status]
    short = true
