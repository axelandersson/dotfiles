# git/gitconfig

[user]
    name = Axel Andersson

[alias]
    viconfig = config --global --edit
    diffstaged = diff --staged
    diffcommit = diff origin
    difftoolstaged = difftool --staged
    difftoolcommitted = difftool origin
    pullall = up-or-pull
    pushall = push --set-upstream --all
    mergenoff = merge --no-ff
    mergecherrypick = cherry-pick --edit
    mergerevert = revert --edit
    stageall = stage --all
    unstage = reset --quiet
    checkin = commit --verbose
    logshort = log-nice short
    loglong = log-nice long
    logshortcommitted = log-nice short origin..HEAD
    loglongcommitted = log-nice long origin..HEAD
    loggraph = log-nice graph
    logbranch = log-branch
    printobject = show --stat --pretty=format:'   Author: %C(magenta)%an%C(reset) <%ae>%n     Date: %ad%nCommitter: %C(magenta)%cn%C(reset) <%ce>%n     Date: %cd%n     Refs: %C(auto)%D%C(reset)%n   Commit: %C(cyan)%h%C(reset)%n  Parents: %C(cyan)%p%C(reset)%n     Tree: %C(cyan)%t%C(reset)%n  Subject: %C(white bold)%s%n%+b%C(reset)'
    branch = checkout --track -b
    switchbranch = checkout
    whichbranch = branch --list --contains
    discardcommitted = discard origin
    v = config --global --edit
    d = diff
    ds = diff --staged
    dc = diff origin
    dt = difftool
    dts = difftool --staged
    dtc = difftool origin
    u = up-or-pull
    p = push --set-upstream --all
    m = merge --no-ff
    mt = mergetool
    mcp = cherry-pick --edit
    mr = revert --edit
    s = status
    a = stage
    aa = stage --all
    r = reset --quiet
    c = commit --verbose
    l = log-nice short
    ll = log-nice long
    lc = log-nice short origin..HEAD
    llc = log-nice long origin..HEAD
    lg = log-nice graph
    lb = log-branch
    po = show --stat --pretty=format:'   Author: %C(magenta)%an%C(reset) <%ae>%n     Date: %ad%nCommitter: %C(magenta)%cn%C(reset) <%ce>%n     Date: %cd%n     Refs: %C(auto)%D%C(reset)%n   Commit: %C(cyan)%h%C(reset)%n  Parents: %C(cyan)%p%C(reset)%n     Tree: %C(cyan)%t%C(reset)%n  Subject: %C(white bold)%s%n%+b%C(reset)'
    b = checkout --track -b
    sb = checkout
    wb = branch --list --contains
    h = discard
    hc = discard origin

[color]
    branch = always
    diff = always
    grep = always
    interactive = always
    pager = true
    showbranch = always
    status = always
    ui = always

[color "branch"]
    current = blue
    local = blue
    remote = red
    plain = white

[color "decorate"]
    branch = blue
    remoteBranch = red
    tag = yellow
    HEAD = blue

[color "diff"]
    meta = white bold black
    frag = white bold black
    func = white bold black
    new = green
    old = red
    commit = cyan

[color "grep"]
    match = red bold

[color "status"]
    added = green
    changed = green
    untracked = red

[core]
    autocrlf = input
    editor = vim
    pager = less
    symlinks = true
    attributesfile = ~/.gitattributes

[credential]
    helper = dynamic

[diff]
    renames = copies
    tool = Kaleidoscope

[diff "plist"]
    textconv = plutil -convert xml1 -o -

[difftool]
    prompt = false

[difftool "Kaleidoscope"]
    cmd = ksdiff --partial-changeset --relative-path \"$MERGED\" -- \"$LOCAL\" \"$REMOTE\"

[git-up "rebase"]
    arguments = --preserve-merges

[grep]
    patternType = perl

[merge]
    log = true
    stat = true
    tool = Kaleidoscope

[merge "plist"]
    textconv = plutil -convert xml1 -o -

[mergetool]
    prompt = false

[mergetool "Kaleidoscope"]
    cmd = ksdiff --merge --output \"$MERGED\" --base \"$BASE\" -- \"$LOCAL\" --snapshot \"$REMOTE\" --snapshot
    trustExitCode = true

[pack]
    threads = 0

[push]
    default = tracking

[status]
    short = true
