# git/gitconfig

[user]
    name = Axel Andersson

[alias]
    v = api viconfig
    u = api update
    p = api push
    s = api status
    a = api stage
    aa = api stage-all
    r = api unstage
    c = api commit
    h = api discard
    hf = api discard-file
    hc = api discard-committed
    l = api log
    ll = api log-long
    lc = api log-committed
    llc = api log-long-committed
    lb = api log-branch
    lg = api log-graph
    d = api diff
    dr = api diff-raw
    ds = api diff-staged
    dc = api diff-committed
    dt = api difftool
    dts = api difftool-staged
    dtc = api difftool-committed
    pc = api print-commit
    pcl = api print-commit-long
    pf = api print-file
    pfr = api print-file-raw
    pfb = api print-file-blame
    b = api branch
    bs = api branch-switch
    bn = api branch-new
    bc = api branch-commit
    m = api merge
    mo = api merge-origin
    mt = api mergetool
    mr = api merge-revert
    mcp = api merge-cherrypick

[cli "color"]
    author = magenta,none,none
    email = none,none,none
    date = none,none,none
    commit = cyan,none,none
    localref = blue,none,none
    remoteref = red,none,none
    subject = white,bold,none
    body = white,bold,none
    blameauthor = magenta,none,black
    blamedate = none,none,black
    blamecommit = cyan,none,black

[color]
    branch = always
    diff = always
    grep = always
    interactive = always
    pager = true
    showbranch = always
    status = always
    ui = always

[color "branch"]
    current = blue
    local = blue
    remote = red
    plain = white

[color "decorate"]
    branch = blue
    remoteBranch = red
    tag = yellow
    HEAD = blue

[color "diff"]
    meta = white bold black
    frag = white bold black
    func = white bold black
    new = green
    old = red
    commit = cyan

[color "grep"]
    match = red bold

[color "status"]
    added = green
    changed = green
    untracked = red

[core]
    autocrlf = input
    editor = vim
    pager = less
    symlinks = true
    attributesfile = ~/.gitattributes

[credential]
    helper = api

[diff]
    renames = copies
    tool = Kaleidoscope

[diff "plist"]
    textconv = plutil -convert xml1 -o -

[difftool]
    prompt = false

[difftool "Kaleidoscope"]
    cmd = ksdiff --partial-changeset --relative-path \"$MERGED\" -- \"$LOCAL\" \"$REMOTE\"

[git-up "rebase"]
    arguments = --preserve-merges

[grep]
    patternType = perl

[merge]
    log = true
    stat = true
    tool = Kaleidoscope

[merge "plist"]
    textconv = plutil -convert xml1 -o -

[mergetool]
    prompt = false

[mergetool "Kaleidoscope"]
    cmd = ksdiff --merge --output \"$MERGED\" --base \"$BASE\" -- \"$LOCAL\" --snapshot \"$REMOTE\" --snapshot
    trustExitCode = true

[pack]
    threads = 0

[push]
    default = tracking

[status]
    short = true
