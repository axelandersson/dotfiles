#!/usr/bin/env perl -w

use strict;
use CLI;
use CLI::Git;

my $options = CLI::options("all");
my @files = @ARGV;

CLI::usage("[--all|<file> [<file> ...]]") if $options->{"help"} || (@files == 0 && !$options->{"all"}) || (@files != 0 && $options->{"all"});

if($options->{"all"}) {
    CLI::run(["git", "reset", "HEAD"]);
} else {
    CLI::run(["git", "reset", "--quiet", "--", @files]);
}
