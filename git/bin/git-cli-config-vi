#!/usr/bin/env perl

use strict;
use warnings;
use CLI;
use CLI::Git;

my $options = CLI::options("system|s", "global|g", "local|l");

CLI::usage("[-s|--system|-g|--global|-l|--local]") if $options->{"help"};

my @flags;

if($options->{"system"}) {
    push(@flags, "--system");
}
elsif($options->{"global"}) {
    push(@flags, "--global");
}
elsif($options->{"local"}) {
    push(@flags, "--local");
}
else {
    push(@flags, "--global");
}

CLI::run(["git", "config", "--edit", @flags]);
