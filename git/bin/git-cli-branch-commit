#!/usr/bin/env perl

use strict;
use warnings;
use CLI;
use CLI::Git;

my $options = CLI::options();
my $commit = shift @ARGV;

CLI::usage("<commit>") if $options->{"help"} || !CLI::Git::iscommit($commit);

my @input = CLI::run(["git", "branch", "--list", "--all", "--contains", $commit]);

CLI::Git::runpager(\@input);
