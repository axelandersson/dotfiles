#!/usr/bin/env perl

use strict;
use CLI;
use CLI::Git;

my $options = CLI::options("raw", "staged", "committed", "tool");
my $arg = shift @ARGV;

CLI::usage("[--raw|--staged|--committed] [--tool]") if $options->{"help"};

my %logoptions;

if($options->{"raw"}) {
    $logoptions{"raw"} = 1;
}

if($options->{"staged"}) {
    $logoptions{"staged"} = 1;
}

if($options->{"committed"}) {
    my $remotebranch = CLI::Git::remotebranch() || CLI::Git::defaultbranch();

    $logoptions{"revision"} = "$remotebranch..HEAD";
}

if($options->{"tool"}) {
    $logoptions{"tool"} = 1;
}

if($arg) {
    if(-e $arg) {
        $logoptions{"file"} = $arg;
    } else {
        $logoptions{"revision"} = $arg;
    }
}

my @output = CLI::Git::diff(\%logoptions);

CLI::Git::runpager(\@output);
