#!/usr/bin/env perl

use strict;
use warnings;
use CLI;
use CLI::Git;

my $options = CLI::options("--origin");

CLI::usage("[--origin]") if $options->{"help"};

if($options->{"origin"}) {
    CLI::run(["git", "push", "--set-upstream", "origin", CLI::Git::branch()]);
} else {
    CLI::run(["git", "push", "--set-upstream"]);
}
