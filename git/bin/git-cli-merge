#!/usr/bin/env perl

use strict;
use CLI;
use CLI::Git;

my $options = CLI::options("origin", "squash");
my $branch = shift @ARGV;

if($branch && $options->{"origin"}) {
    $branch = "origin/$branch";
}

CLI::usage("[--origin] [--squash] <branch>") if $options->{"help"} || !$branch;

CLI::asserttrue(CLI::Git::isbranch($branch), "$branch is not a branch");

if($options->{"squash"}) {
    CLI::run(["git", "merge", "--edit", "--verbose", "--squash", $branch]);
} else {
    CLI::run(["git", "merge", "--no-ff", "--edit", "--verbose", $branch]);
}
