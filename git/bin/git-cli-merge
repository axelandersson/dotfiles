#!/usr/bin/perl -w

use strict;
use CLI;
use CLI::Git;

my $options = CLI::options("origin");
my $branch = shift @ARGV;

if($branch && $options->{"origin"}) {
    $branch = "origin/$branch";
}

CLI::usage("[--origin] <branch>") if $options->{"help"} || !CLI::Git::isbranch($branch);

CLI::run(["git", "merge", "--no-ff", "--edit", "--verbose", $branch]);
