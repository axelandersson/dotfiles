#!/usr/bin/env perl

use strict;
use warnings;
use CLI;
use CLI::Git;

my $options = CLI::options();

CLI::usage() if $options->{"help"};

if(CLI::canrun("git-up")) {
    CLI::run(["git", "up"]);
} else {
    print "Warning: git-up not found - using git pull\n";
    CLI::run(["git", "pull", "--rebase", "--autostash", "--all"]);
}
