#!/bin/bash

cbla="\033[0;30m"
cred="\033[0;31m"
cgre="\033[0;32m"
cyel="\033[0;33m"
cblu="\033[0;34m"
cmag="\033[0;35m"
ccya="\033[0;36m"
cwhi="\033[0;37m"
cboldbla="\033[1;30m"
cboldred="\033[1;31m"
cboldgre="\033[1;32m"
cboldyel="\033[1;33m"
cboldblu="\033[1;34m"
cboldmag="\033[1;35m"
cboldcya="\033[1;36m"
cboldwhi="\033[1;37m"
clinebla="\033[4;30m"
clinered="\033[4;31m"
clinegre="\033[4;32m"
clineyel="\033[4;33m"
clineblu="\033[4;34m"
clinemag="\033[4;35m"
clinecya="\033[4;36m"
clinewhi="\033[4;37m"
cbackbla="\033[40m"
cbackred="\033[41m"
cbackgre="\033[42m"
cbackyel="\033[43m"
cbackblu="\033[44m"
cbackmag="\033[45m"
cbackcya="\033[46m"
cbackwhi="\033[47m"
cbbla="\033[0;90m"
cbred="\033[0;91m"
cbgre="\033[0;92m"
cbyel="\033[0;93m"
cbblu="\033[0;94m"
cbmag="\033[0;95m"
cbcya="\033[0;96m"
cbwhi="\033[0;97m"
cbboldbla="\033[1;90m"
cbboldred="\033[1;91m"
cbboldgre="\033[1;92m"
cbboldyel="\033[1;93m"
cbboldblu="\033[1;94m"
cbboldmag="\033[1;95m"
cbboldcya="\033[1;96m"
cbboldwhi="\033[1;97m"
cbbackbla="\033[100m"
cbbackred="\033[101m"
cbbackgre="\033[102m"
cbbackyel="\033[103m"
cbbackblu="\033[104m"
cbbackmag="\033[105m"
cbbackcya="\033[106m"
cbbackwhi="\033[107m"
cres="\033[0m"

function colors() {
    printf "%-18s$cbla%s$cres $cboldbla%s$cres $clinebla%s$cres $cbackbla%s$cres $cbbla%s$cres $cbboldbla%s$cres $cbbackbla%s$cres\n" "Black" "\$cbla" "\$cboldbla" "\$clinebla" "\$cbackbla" "\$cbbla" "\$cbboldbla" "\$cbbackbla"
    printf "%-18s$cred%s$cres $cboldred%s$cres $clinered%s$cres $cbackred%s$cres $cbred%s$cres $cbboldred%s$cres $cbbackred%s$cres\n" "Red" "\$cred" "\$cboldred" "\$clinered" "\$cbackred" "\$cbred" "\$cbboldred" "\$cbbackred"
    printf "%-18s$cgre%s$cres $cboldgre%s$cres $clinegre%s$cres $cbackgre%s$cres $cbgre%s$cres $cbboldgre%s$cres $cbbackgre%s$cres\n" "Green" "\$cgre" "\$cboldgre" "\$clinegre" "\$cbackgre" "\$cbgre" "\$cbboldgre" "\$cbbackgre"
    printf "%-18s$cyel%s$cres $cboldyel%s$cres $clineyel%s$cres $cbackyel%s$cres $cbyel%s$cres $cbboldyel%s$cres $cbbackyel%s$cres\n" "Yellow" "\$cyel" "\$cboldyel" "\$clineyel" "\$cbackyel" "\$cbyel" "\$cbboldyel" "\$cbbackyel"
    printf "%-18s$cblu%s$cres $cboldblu%s$cres $clineblu%s$cres $cbackblu%s$cres $cbblu%s$cres $cbboldblu%s$cres $cbbackblu%s$cres\n" "Blue" "\$cblu" "\$cboldblu" "\$clineblu" "\$cbackblu" "\$cbblu" "\$cbboldblu" "\$cbbackblu"
    printf "%-18s$cmag%s$cres $cboldmag%s$cres $clinemag%s$cres $cbackmag%s$cres $cbmag%s$cres $cbboldmag%s$cres $cbbackmag%s$cres\n" "Magenta" "\$cmag" "\$cboldmag" "\$clinemag" "\$cbackmag" "\$cbmag" "\$cbboldmag" "\$cbbackmag"
    printf "%-18s$ccya%s$cres $cboldcya%s$cres $clinecya%s$cres $cbackcya%s$cres $cbcya%s$cres $cbboldcya%s$cres $cbbackcya%s$cres\n" "Cyan" "\$ccya" "\$cboldcya" "\$clinecya" "\$cbackcya" "\$cbcya" "\$cbboldcya" "\$cbbackcya"
    printf "%-18s$cwhi%s$cres $cboldwhi%s$cres $clinewhi%s$cres $cbackwhi%s$cres $cbwhi%s$cres $cbboldwhi%s$cres $cbbackwhi%s$cres\n" "White" "\$cwhi" "\$cboldwhi" "\$clinewhi" "\$cbackwhi" "\$cbwhi" "\$cbboldwhi" "\$cbbackwhi"
}
