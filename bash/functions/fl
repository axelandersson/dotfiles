# bash/functions/fl

function fl() {
    directory="$@"

    if [ -n "$directory" ]; then
        find "$directory"
    else
        find .
    fi
}

function fld() {
    directory="$@"

    if [ -n "$directory" ]; then
        find "$directory" -type d
    else
        find . -type d
    fi
}

function flx() {
    directory="$@"

    if [ -n "$directory" ]; then
        find "$directory" -type f -perm +111
    else
        find . -type f -perm +111
    fi
}
