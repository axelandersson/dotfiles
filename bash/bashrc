#!/bin/bash

if [ -z "$PS1" ]; then
    return
fi

if [ -f "/etc/bashrc" ]; then
    source "/etc/bashrc"
fi

if [ -f "$HOME/.bash_local" ]; then
    source "$HOME/.bash_local"
fi

GIT_PS1_SHOWUPSTREAM="auto"
GIT_PS1_SHOWDIRTYSTATE="1"
source "$HOME/.dotfiles/bash/bash_git_prompt"

source "$HOME/.dotfiles/bash/bash_config"
source "$HOME/.dotfiles/bash/bash_path"
source "$HOME/.dotfiles/bash/bash_env"
source "$HOME/.dotfiles/bash/bash_alias"
source "$HOME/.dotfiles/bash/bash_git_completion"

for i in "$HOME/.dotfiles/bash/functions"/*; do
    source "$i"
done

version=${BASH_VERSION%.*}
major=${version%.*}
minor=${version#*.}

if [ $major -gt 4 ] || [ $major -eq 4 -a $minor -ge 1 ]; then
    source "$HOME/.dotfiles/bash/completion-2.1/bash_completion"
else
    source "$HOME/.dotfiles/bash/completion-1.1/bash_completion"
fi
